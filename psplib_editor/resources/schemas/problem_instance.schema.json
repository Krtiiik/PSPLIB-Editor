{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.org/schemas/problem_instance.schema.json",
	"title": "PSPLIB Problem Instance",
	"type": "object",
	"required": ["Name", "Horizon", "Resources", "Jobs"],
	"properties": {
		"Name": { "type": "string" },
		"Horizon": { "type": "integer", "minimum": 0 },
		"Resources": {
			"type": "array",
			"items": { "$ref": "#/$defs/resource" },
			"minItems": 0
		},
		"Jobs": {
			"type": "array",
			"items": { "$ref": "#/$defs/job" },
			"minItems": 0
		}
	},
	"additionalProperties": false,
	"$defs": {
		"resource": {
			"type": "object",
			"required": ["Key", "Type", "Capacity"],
			"properties": {
				"Key": { "type": "string" },
				"Type": { "type": "string", "enum": ["Renewable", "NonRenewable"] },
				"Capacity": { "type": "integer", "minimum": 0 }
			},
			"additionalProperties": false
		},
		"job": {
			"type": "object",
			"required": ["Id", "Duration", "Resource consumption", "Successors"],
			"properties": {
				"Id": { "type": "integer" },
				"Duration": { "type": "integer", "minimum": 0 },
				"Resource consumption": {
					"type": "object",
					"propertyNames": { "type": "string" },
					"additionalProperties": { "type": "integer", "minimum": 0 }
				},
				"Successors": {
					"type": "array",
					"items": { "type": "integer" },
					"minItems": 0
				}
			},
			"additionalProperties": false
		}
	}
}